<!-- Documento HTML que irá aparecer quando houver requerimento do site notícias -->
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Notícia</h1>

    <table>
    		<tr>
    			<td>ID</td>
    			<td>Título</td>
    			<td>Noticia</td>
    		</tr>

    			<% for (var i=0; i<noticias.length; i++){  %> 
					<!-- laço de repetição para percorrer o vetor -->

    		<tr>
    			<td><%=noticias[i].id_noticia%></td>
    			<td><%=noticias[i].titulo%></td>
    			<td><%=noticias[i].noticia%></td>
    		</tr>
<% } %>

    </table>

</body>
</html>